#!/bin/bash

# Ultraspec Installer Plugin for Sidekick
# Simply downloads and runs the official ultraspec installer
# https://github.com/aiconsultancy/ultraspec

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
BOLD='\033[1m'
NC='\033[0m' # No Color

# Helper functions
print_error() {
    echo -e "${RED}✗ $1${NC}" >&2
}

print_success() {
    echo -e "${GREEN}✓ $1${NC}"
}

print_info() {
    echo -e "${BLUE}→ $1${NC}"
}

# Main function
main() {
    # Header
    echo -e "${BOLD}${BLUE}╔════════════════════════════════════════╗${NC}"
    echo -e "${BOLD}${BLUE}║       Ultraspec Installer Plugin       ║${NC}"
    echo -e "${BOLD}${BLUE}╚════════════════════════════════════════╝${NC}"
    echo
    
    # Download and run the official installer
    print_info "Downloading ultraspec installer..."
    
    local installer_script="/tmp/ultraspec_installer_$$.sh"
    
    if curl -fsSL https://raw.githubusercontent.com/aiconsultancy/ultraspec/main/install.sh \
        -o "$installer_script" 2>/dev/null; then
        print_success "Downloaded installer"
        
        # Make it executable
        chmod +x "$installer_script"
        
        # Run the installer with all passed arguments
        print_info "Running ultraspec installer..."
        echo
        
        if bash "$installer_script" "$@"; then
            local result=0
        else
            local result=$?
        fi
        
        # Clean up
        rm -f "$installer_script"
        
        if [[ $result -eq 0 ]]; then
            echo
            print_success "Ultraspec installation completed!"
        else
            echo
            print_error "Ultraspec installation failed"
            exit $result
        fi
    else
        print_error "Failed to download ultraspec installer"
        print_info "Check your internet connection and try again"
        exit 1
    fi
}

# Run main function with all arguments
main "$@"